
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int         @id @default(autoincrement())
  usuario      String      @unique
  email        String      @unique
  senha        String
  cpf          String      @unique
  telefone     String
  sexo         String
  mostrarValores Boolean   @default(false)
  gastos       Gasto[]
  gastosFixos  GastoFixo[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("usuarios")
}

model Gasto {
  id        Int      @id @default(autoincrement())
  descricao String
  valor     Float
  tipo      String
  data      DateTime
  parcelas  Int      @default(1)
  categoria String?
  status    String   @default("a_vencer")
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gastos")
}

model GastoFixo {
  id             Int      @id @default(autoincrement())
  descricao      String
  valor          Float
  tipo           String
  diaVencimento  Int
  categoria      String?
  ativo          Boolean  @default(true)
  status         String   @default("a_vencer")
  usuarioId      Int
  usuario        Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("gastos_fixos")
}
