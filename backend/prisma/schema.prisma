
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gasto {
  id        Int      @id @default(autoincrement())
  descricao String
  valor     Float
  tipo      String
  data      DateTime
  parcelas  Int      @default(1)
  categoria String?
  status    String   @default("a_vencer")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gastos")
}

model GastoFixo {
  id             Int      @id @default(autoincrement())
  descricao      String
  valor          Float
  tipo           String
  diaVencimento  Int
  categoria      String?
  ativo          Boolean  @default(true)
  status         String   @default("a_vencer")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("gastos_fixos")
}
